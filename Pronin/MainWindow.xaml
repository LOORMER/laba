<Window x:Class="Pronin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pronin"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="SprButton" Content="Справочная" Width="200" Height="40" FontSize="20" Margin="5" Click="SprButton_Click"/>
            <Button x:Name="UchButton" Content="Учётная" Width="200" Height="40" FontSize="20" Margin="5" Click="UchButton_Click"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top">
            <Button x:Name="ExitButton" Content="Выход" Width="150" Height="30" FontSize="15" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
